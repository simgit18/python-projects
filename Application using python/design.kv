<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                hint_text: "username"
            TextInput:
                hint_text: "password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password"

            Button:
                text: "Sign Up"
                color: "red"
                on_press: root.sign_up()

<SignUp_Screen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text: "Create new account"

            TextInput:
                id: username
                hint_text: "Username"
            TextInput:
                id: password
                hint_text: "Password"
            Button:
                text: "Create Account"
                on_press: root.add_user(root.ids.username.text, root.ids.password.text)

<ContinueLogin>
    GridLayout:
        cols:1
        Label:
            text:"Account Created! Go Ahead and SignIn"
        
        Button:
            text:"Back to SignIn Page"
            on_press:root.backTologin()

<RootWidget>:
    LoginScreen:
        name: "Login_screen"

    SignUp_Screen:
        name: "Signup_screen"
            
    ContinueLogin:
        name:"backTologin"