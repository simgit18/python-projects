<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols: 1
            Label:
                text: "User Login"
            TextInput:
                hint_text: "username"
            TextInput:
                hint_text: "password"
            Button:
                text: "Login"
        GridLayout:
            cols: 2
            Button:
                text: "Forgot Password"

            Button:
                text: "Sign Up"
                on_press: root.sign_up()

<SignUp_Screen>:
    GridLayout:
        cols:1
        GridLayout:
            cols:1
            Label:
                text: "Create new account"

            TextInput:
                hint_text: "Username"
            TextInput:
                hint_text: "Password"
            Button:
                text: "Create Account"

<RootWidget>:
    LoginScreen:
        name: "Login_screen"

    SignUp_Screen:
        name: "Signup_screen"
            